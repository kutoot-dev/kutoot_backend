{
  "info": {
    "name": "Kutoot Backend APIs",
    "description": "API Collection for Newsletter, Dashboard, Campaigns and User Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Newsletter Subscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/user/subscribe-newsletter",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "subscribe-newsletter"]
            },
            "description": "Subscribe a user to the newsletter with their email address"
          },
          "response": []
        },
        {
          "name": "My Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT Token"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/my-dashboard",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "my-dashboard"]
            },
            "description": "Get user dashboard statistics including total campaigns, credit/debit coins, and recent orders"
          },
          "response": []
        },
        {
          "name": "My Campaigns",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT Token"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/my-campaigns?page=1",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "my-campaigns"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number for pagination"
                }
              ]
            },
            "description": "Get all purchased campaigns for the authenticated user with pagination"
          },
          "response": []
        },
        {
          "name": "Deactivate Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT Token"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/deactivate-account",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "deactivate-account"]
            },
            "description": "Deactivate the authenticated user's account"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Coin Campaigns",
      "item": [
        {
          "name": "Get All Campaigns",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/coin-campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "coin-campaigns"]
            },
            "description": "Get all available coin campaigns"
          },
          "response": []
        },
        {
          "name": "Campaign Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/coin-campaigns/details/1",
              "host": ["{{base_url}}"],
              "path": ["api", "coin-campaigns", "details", "1"]
            },
            "description": "Get details of a specific campaign by ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login user and get JWT token"
          },
          "response": []
        },
        {
          "name": "Get User Info",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get authenticated user information"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout user and invalidate token"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://admin.kutoot.com",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
}
